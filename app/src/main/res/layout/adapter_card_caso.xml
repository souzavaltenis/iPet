<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingBottom="3dp"
    android:orientation="vertical" android:layout_width="match_parent" android:paddingRight="5dp"
    android:layout_height="wrap_content" android:paddingTop="3dp" android:paddingLeft="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#777777">

            <TextView
                android:id="@+id/tvOngInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="ONG"
                android:textColor="#cccccc"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOngData"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="TesteOng"
                android:textColor="#cccccc"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvtTitleInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Caso"
                android:layout_marginTop="20dp"
                android:textColor="#cccccc"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTitleData"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Cadelinha triste"
                android:textColor="#cccccc"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvtDescricaoInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Descrição"
                android:layout_marginTop="20dp"
                android:textColor="#cccccc"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescricaoData"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="A cadela estava passeando em uma bela rua quando um carro lhe atropelou."
                android:textColor="#cccccc"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvtValorInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Valor"
                android:layout_marginTop="20dp"
                android:textColor="#cccccc"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvValorData"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:text="R$ 695.34"
                android:textColor="#cccccc"
                android:textSize="18sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>